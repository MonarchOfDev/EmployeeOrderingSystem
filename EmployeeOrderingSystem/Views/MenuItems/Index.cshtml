@model IEnumerable<EmployeeOrderingSystem.Models.MenuItem>
@{
    ViewData["Title"] = "Menu Items";
}
<h2>Menu Items</h2>
<table id="example" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Restaurant</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price.ToString("C")</td>
            <td>@item.Restaurant?.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id"><span class="d-flex"><i class="bi bi-pencil-square"></i>&nbsp;Edit</span></a> |
                    <span class="d-flex"><i class="bi bi-pencil-square"></i>&nbsp;Edit Status</span>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Create">Create New</a>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#example').DataTable({
                responsive: true,
                paging: true,
                searching: true
            });
        });
    </script>
}
