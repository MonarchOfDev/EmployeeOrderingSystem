@model IEnumerable<EmployeeOrderingSystem.Models.MenuItem>
<div class="container-card w-90">
    <h2>Menu Search</h2>
    <form asp-action="Search" method="get" class="mb-3">
        <input type="text" name="searchTerm" value="@ViewData["SearchTerm"]" placeholder="Search..." class="form-control" />
    </form>
    <table id="example" class="table table-bordered table-hover table-responsive">
        <thead>
            <tr><th>Item</th><th>Restaurant</th><th>Description</th><th>Price</th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Restaurant.Name</td>
                    <td>@item.Description</td>
                    <td>R @item.Price.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#example').DataTable({
                responsive: true,
                paging: true,
                searching: true
            });
        });
    </script>
}
