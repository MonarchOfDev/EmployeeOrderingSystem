@model EmployeeOrderingSystem.Models.MenuItem
@{
    ViewData["Title"] = "Menu Item Details";
}
<h2>Details</h2>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    <dt class="col-sm-2">Restaurant</dt>
    <dd class="col-sm-10">@Model.Restaurant?.Name</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.Id"><span class="d-flex"><i class="bi bi-pencil-square"></i>&nbsp;Edit</span></a> |
<a asp-action="Index">Back to List</a>