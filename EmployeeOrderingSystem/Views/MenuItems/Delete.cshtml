@model EmployeeOrderingSystem.Models.MenuItem
@{
    ViewData["Title"] = "Delete Menu Item";
}

<div class="d-flex justify-content-center">
    <div class="container-card col-lg-6">
        <h2>Delete Menu Item</h2>
        <h3>Are you sure you want to delete this?</h3>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="container d-flex flex-column flex-md-row justify-content-between text-black">
                <a asp-action="Index" class="btn btn-outline-secondary m-1" style="width:95px"><i class="bi bi-x-circle"></i> Cancel</a>
                <button type="submit" class="btn btn-outline-danger m-1" style="width:95px"><i class="bi bi-trash"></i> Delete</button>
            </div>
        </form>
    </div>
</div>