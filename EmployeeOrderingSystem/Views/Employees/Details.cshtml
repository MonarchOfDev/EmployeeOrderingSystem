@model EmployeeOrderingSystem.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}
<h2>Details</h2>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Employee Number</dt>
    <dd class="col-sm-10">@Model.EmployeeNumber</dd>
    <dt class="col-sm-2">Balance</dt>
    <dd class="col-sm-10">@Model.Balance.ToString("C")</dd>
    <dt class="col-sm-2">Last Deposit Month</dt>
    <dd class="col-sm-10">@Model.LastDepositMonth.ToShortDateString()</dd>
</dl>
<a asp-action="Deposit" asp-route-id="@Model.Id" class="btn btn-outline-success">Deposit</a>
&nbsp;&nbsp;&nbsp;

<a asp-action="Index" asp-controller="Restaurants" class="btn btn-outline-primary">Restaurants</a>