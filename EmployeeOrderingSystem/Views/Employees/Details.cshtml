@model EmployeeOrderingSystem.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}
<div class="container-card col-md-6">
    <h2>Details</h2>
    <dl class="row">
        <dt class="form-label">Name</dt>
        <dd class="col-sm-8 form-check">@Model.Name</dd>
        <dt class="form-label">Employee Number</dt>
        <dd class="col-sm-8 form-check">@Model.EmployeeNumber</dd>
        <dt class="form-label">Balance</dt>
        <dd class="col-sm-8 form-check">@Model.Balance.ToString("C")</dd>
        <dt class="form-label">Last Deposit Month</dt>
        <dd class="col-sm-8 form-check">@Model.LastDepositMonth.ToShortDateString()</dd>
    </dl>
    <a asp-action="Deposit" asp-route-id="@Model.Id" class="btn btn-outline-primary"><i class="bi bi-coin"></i>&nbsp; Deposit</a>
    &nbsp;&nbsp;&nbsp;

    <a asp-action="Index" asp-controller="Restaurants" class="btn btn-outline-primary"><i class="bi bi-shop"></i> Restaurants</a>
</div>
