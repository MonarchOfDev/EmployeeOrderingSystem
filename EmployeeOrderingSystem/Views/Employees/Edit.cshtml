@model EmployeeOrderingSystem.Models.Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="d-flex justify-content-center">
    <div class="container-card" style="width:500px;">
        <h2>Edit Employee</h2>
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeNumber"></label>
                <input asp-for="EmployeeNumber" class="form-control" />
                <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance"></label>
                <input asp-for="Balance" readonly value="0" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastDepositMonth"></label>
                <input asp-for="LastDepositMonth" class="form-control" />
                <span asp-validation-for="LastDepositMonth" class="text-danger"></span>
            </div>
            <br />
            <div class="container d-flex flex-column flex-md-row justify-content-between text-black">
                <a asp-action="Index" class="btn btn-outline-secondary m-2"> <i class="bi bi-arrow-left-circle"></i> Back</a>
                <button type="submit" class="btn btn-outline-primary m-2"><i class="bi bi-floppy"></i> Save</button>
            </div>
        </form>
    </div>
</div>