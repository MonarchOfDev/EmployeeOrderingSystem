@model EmployeeOrderingSystem.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}
<h2>Delete Employee</h2>
<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Employee Number</dt>
    <dd class="col-sm-10">@Model.EmployeeNumber</dd>
    <dt class="col-sm-2">Balance</dt>
    <dd class="col-sm-10">@Model.Balance.ToString("C")</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>