@model EmployeeOrderingSystem.ViewModels.EmployeeDepositViewModel
@{
    ViewData["Title"] = "Deposit";
}
<h2>Deposit to Employee Account</h2>

<form asp-action="Deposit" method="post" class="mt-4">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="form-group">
        <label asp-for="DepositAmount"></label>
        <input asp-for="DepositAmount" class="form-control" min="1" type="number" step="0.01" required />
        <span asp-validation-for="DepositAmount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Deposit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-2">@TempData["Message"]</div>
}
