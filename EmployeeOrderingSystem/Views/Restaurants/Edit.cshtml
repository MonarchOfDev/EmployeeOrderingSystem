@model EmployeeOrderingSystem.Models.Restaurant
@{
    ViewData["Title"] = "Edit Restaurant";
}
<div class="container-card w-90">
    <h2>Edit Restaurant</h2>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LocationDescription"></label>
            <input asp-for="LocationDescription" class="form-control" />
            <span asp-validation-for="LocationDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactNumber"></label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary m-2"><i class="bi bi-floppy"></i> Save</button> &nbsp; | &nbsp;
        <a asp-action="Index" class="btn btn-outline-secondary m-2"> <i class="bi bi-arrow-left-circle"></i>Back to List</a>
    </form>
</div>