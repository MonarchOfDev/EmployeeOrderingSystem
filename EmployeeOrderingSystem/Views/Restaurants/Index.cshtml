@model IEnumerable<EmployeeOrderingSystem.Models.Restaurant>
@{
    ViewData["Title"] = "Restaurants";
    var isAdmin = User.IsInRole("Admin");
}
<h2>Restaurants</h2>
@if (isAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Add Restaurant</a>
    </p>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Contact</th>
            <th>Menu</th>
            @if (isAdmin)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Name</td>
                <td>@r.LocationDescription</td>
                <td>@r.ContactNumber</td>
                <td>
                    <a asp-controller="Cart" asp-action="BrowseMenu" asp-route-restaurantId="@r.Id" class="btn btn-outline-success btn-sm">View Menu</a>
                </td>
                @if (isAdmin)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-info">Details</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
