@model IEnumerable<EmployeeOrderingSystem.Models.Order>
<h2>All Orders (Admin)</h2>
<table id="example" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr><th>OrderId</th><th>Employee</th><th>Date</th><th>Status</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Employee.Name</td>
                <td>@order.OrderDate</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="EditStatus" asp-route-id="@order.OrderId" class="btn btn-warning btn-sm"><span class="d-flex"><i class="bi bi-pencil-square"></i>&nbsp;Edit</span>&nbsp; Status</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#example').DataTable({
                responsive: true,
                paging: true,
                searching: true
            });
        });
    </script>
}

