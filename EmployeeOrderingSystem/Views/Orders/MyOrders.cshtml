@model IEnumerable<EmployeeOrderingSystem.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}
<h2>My Orders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.Status</td>
                <td>R @order.TotalAmount.ToString("F2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
