@model IEnumerable<EmployeeOrderingSystem.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}
<div class="container-card w-90">
    <h2>My Orders</h2>
    <table id="example" class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@order.Status</td>
                    <td>R @order.TotalAmount.ToString("F2")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-outline-info"><span class="d-flex"><i class="bi bi-view-stacked"></i>&nbsp;View</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#example').DataTable({
                responsive: true,
                paging: true,
                searching: true
            });
        });
    </script>
}
