@model EmployeeOrderingSystem.Models.Order
@{
    ViewData["Title"] = "Create Order";
}
<h2>Create Order</h2>
<form asp-action="Create">
    <input type="hidden" name="employeeId" value="@ViewData["EmployeeId"]" />
    <div class="form-group">
        <label for="menuItemIds">Menu Items</label>
        <select multiple name="menuItemIds" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="quantities">Quantities</label>
        <input type="text" name="quantities" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Place Order</button>
</form>
<a asp-action="MyOrders" asp-route-employeeId="@ViewData["EmployeeId"]">Back to My Orders</a>