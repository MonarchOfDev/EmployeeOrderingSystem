@model EmployeeOrderingSystem.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Your Cart";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-info">
        Your cart is empty.
    </div>
    <a asp-action="BrowseMenu" asp-route-restaurantId="@(Model?.RestaurantId ?? 0)" class="btn btn-primary">Browse Menu</a>
}
else
{
    <p><b>Restaurant:</b> @Model.RestaurantName</p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Item</th>
                <th width="100">Unit Price</th>
                <th width="100">Quantity</th>
                <th width="120">Total</th>
                <th width="120"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.MenuItemName</td>
                    <td>R @item.UnitPrice.ToString("F2")</td>
                    <td>
                        <!-- Single-line form for updating quantity (NOT nested) -->
                        <form asp-action="UpdateQuantity" asp-controller="Cart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control d-inline-block" style="width:60px;" />
                            <button type="submit" class="btn btn-sm btn-secondary ml-1">Update</button>
                        </form>
                    </td>
                    <td>R @item.Total.ToString("F2")</td>
                    <td>
                        <!-- Single-line form for removing item -->
                        <form asp-action="RemoveFromCart" asp-controller="Cart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"><b>Total:</b></td>
                <td colspan="2"><b>R @Model.CartTotal.ToString("F2")</b></td>
            </tr>
        </tfoot>
    </table>
    <!-- Main form for checkout (NO nested forms!) -->
    <form asp-action="Checkout" method="post">
        @Html.AntiForgeryToken()
        <button class="btn btn-success" type="submit">Checkout &amp; Place Order</button>
        <a asp-action="BrowseMenu" asp-route-restaurantId="@Model.RestaurantId" class="btn btn-outline-primary ml-2">Add More Items</a>
    </form>
}
